{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ]
        },
        "install": {
            "cache": false
        },
        "lint": {
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "install"
            ]
        },
        "start": {
            "cache": false,
            "persistent": true,
            "dependsOn": [
                "build"
            ]
        }
    }
}